    <!-- form handling -->
    <form  method="POST" id='add-user' action="api/users">
        <div class="new-user">
            <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <input type="hidden" name="id" required value="">
                <input type="text" name="name" value="" placeholder="Becker Kadji">
            </div>
            <div class="form-group">
                <label for="Email" class="text-light">Email</label>
                <input type="text" name="email" value="" required placeholder="example@gmail.com">
            </div>

            <div class="form-group">
                <label for="gender" class="radio-lable">Gender</label>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="gender" value="Male" >
                    <label for="radio-2" class="radio-lable">Male</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id ="radio-3"name="gender"  value="Female" >
                    <label for="radio-3" class="radio-lable">Female</label>
                </div>
            </div>

            <div class="form-group">
                <label for="status" class="radio-lable">Status</label>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="status" value="Active" >
                    <label for="radio-4" class="radio-lable">Active</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-5" name="status" value="Inactive" >
                    <label for="radio-5" class="radio-lable">Inactive</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit"  value="Save" class="btn text-dark update" />
            </div>
        </div>
    </form>